{
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
  },

  "Kafka": {
    "BootstrapServers": "${KAFKA_BOOTSTRAP_SERVERS}",
    "Topic": "ordering-events"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },

  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Ordering API Health",
        "Uri": "/health"
      }
    ],
    "Webhooks": [],
    "EvaluationTimeOnSeconds": 60,
    "MinimumSecondsBetweenFailureNotifications": 30
  },

  "AllowedHosts": "*"
}
